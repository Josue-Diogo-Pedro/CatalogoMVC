@model CategoriaViewModel

<h3>Deletar Categoria</h3>
<h4>Confirma a exclusão desta Categoria?</h4>

<div>
    
    <hr/>
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagemUrl)
        </dd>
    </dl>

    <div class="row">
        <div class="form-group col-md-6" style="padding-top:10px">
            @if(string.IsNullOrEmpty(Model.ImagemUrl)){
                 <img src="~/imagens/noimage1.png" />
            }else{
                <img src="@Model.ImagemUrl" />
            }
        </div>
    </div>

    <form asp-action="DeletarCategoria">
        <input type="hidden" asp-for="CategoriaId" />
        <div class="form-group" style="padding-top:10px">
            <input type="submit" class="btn btn-danger" value="Deletar"/>
            <a asp-action="Index" class="btn btn-info">Retornar</a>
        </div>
    </form>

</div>
