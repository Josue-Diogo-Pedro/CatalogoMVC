@model CategoriaViewModel

<h2>Criar uma Categoria</h2>

<form asp-action="CriarNovaCategoria">
    <div class="form-horizontal">
        <hr/>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ImagemUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"/>
            </div>
        </div>

        <div class="form-group" style="padding-top: 10px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Retornar</a>
            </div>
        </div>

    </div>

    @if(ViewBag.Erro is not null){
        <div style="color:red;">
            <h4>@ViewBag.Erro</h4>
        </div>
    }

</form>